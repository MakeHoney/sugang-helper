<p id="notice"><%= notice %></p>

<div class="container">

  <h1><strong>질문게시판</strong></h1>


  <div id="myBtnContainer">
    <button class="btn active" onclick="filterSelection('all')"> 전체보기</button>
    <button class="btn" onclick="filterSelection('showall')"> 전체보기</button>
    <button class="btn" onclick="filterSelection('software')"> 소프트웨어학과</button>
    <button class="btn" onclick="filterSelection('cyber_security')"> 사이버보안학과</button>
  </div>
</div>

<div class="container">
  <div class="filterDiv showall">
    <table>
      <thead>
        <tr>
          <th>제목</th>
          <th>학과</th>
          <th>작성자</th>
          <th>작성시간</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="col-md-6 col-xs-6"><%= link_to post.title, post %></td>
            <td><%= post.category_id %></td>
            <td><%= post.user.present? ? post.user.email : "n/a" %></td>
            <td><%= time_ago_in_words(post.created_at) %> ago</td>
            <td>
              <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_post_path(post) %>&nbsp;
              <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, post, method: :delete, data: { confirm: '정말 삭제하시겠어요?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

