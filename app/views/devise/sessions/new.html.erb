<div class="container">
  <h2>로그인</h2> 
  
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: "이메일", required: false, autofocus: true %>
      <%= f.input :password, label: "패스워드", required: false %>
      <%= f.input :remember_me, label: "기억하기", as: :boolean if devise_mapping.rememberable? %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, "로그인" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>